#!/bin/bash

echo "ðŸ”’ Aplicando endurecimiento segÃºn recomendaciones de Lynis..."

### 1. DEBSUMS
if ! dpkg -l | grep -qw debsums; then
    echo "ðŸ“¦ Instalando debsums..."
    apt-get install -y debsums
else
    echo "âœ… debsums ya instalado"
fi

# Agregar cron semanal si no existe
CRON_FILE="/etc/cron.weekly/debsums-check"
if [ ! -f "$CRON_FILE" ]; then
    echo "ðŸ•’ Agregando chequeo semanal de integridad con debsums..."
    cat > "$CRON_FILE" <<EOF
#!/bin/bash
debsums -s > /var/log/debsums-check.log
EOF
    chmod +x "$CRON_FILE"
else
    echo "âœ… Cron de debsums ya existe: $CRON_FILE"
fi

### 2. UNATTENDED-UPGRADES
if ! dpkg -l | grep -qw unattended-upgrades; then
    echo "ðŸ“¦ Instalando actualizaciones automÃ¡ticas (unattended-upgrades)..."
    apt-get install -y unattended-upgrades
    dpkg-reconfigure --priority=low unattended-upgrades
else
    echo "âœ… unattended-upgrades ya instalado"
fi

### 3. BACKUP NAMESERVER
RESOLV="/etc/resolv.conf"
if ! grep -q 'nameserver 1.1.1.1' "$RESOLV"; then
    echo "ðŸŒ Agregando nameserver de backup (1.1.1.1)..."
    echo "nameserver 1.1.1.1" >> "$RESOLV"
else
    echo "âœ… Nameserver de backup ya presente"
fi

### 4. DESHABILITAR PROTOCOLOS (dccp, sctp, rds)
PROTO_ARCHIVO="/etc/modprobe.d/disable-protocols.conf"
echo "ðŸ“› Desactivando protocolos dccp, sctp y rds si no se usan..."
cat > "$PROTO_ARCHIVO" <<EOF
install dccp /bin/true
install sctp /bin/true
install rds /bin/true
EOF

echo "âœ… Archivo creado: $PROTO_ARCHIVO"
echo "ðŸ’¡ ReiniciÃ¡ o corrÃ© 'update-initramfs -u && reboot' para aplicar completamente."

echo
echo "âœ”ï¸ Endurecimiento completado segÃºn las recomendaciones de Lynis."
