[Unit]
Description=Restore ARPTables rules
Documentation=man:arptables-restore(8)
Wants=network-online.target
After=network-online.target
ConditionPathExists=/etc/arptables/rules.arpt

[Service]
Type=oneshot
ExecStart=/bin/bash -c "/usr/sbin/arptables-legacy-restore < /etc/arptables/rules.arpt"
ExecReload=/bin/bash -c "/usr/sbin/arptables-legacy-restore < /etc/arptables/rules.arpt"
StandardInput=file:/etc/arptables/rules.arpt
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target